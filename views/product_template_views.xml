<?xml version="1.0"?>
<odoo>
    <record id="product_product_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="before">
                <group name="warehouse_limit" string="WAREHOUSE" invisible="detailed_type in ['service','consu']">
                    <field name="warehouse_limit_ids">
                        <tree editable="bottom">
                            <field name="warehouse_id" options="{'no_create': True}"/>
                            <field name="warehouse_limit"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>